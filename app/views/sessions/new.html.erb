<h2 align="center">Welcome to MessageMe - <i>a complete Chat App</i></h2>
<h2 class="ui center aligned medium icon header">
  <i class="circular teal inverted meh icon"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <!-- <div class="ui form"> -->
      <%= form_for(:session, html: { class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, placeholder: "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <!-- <div class="ui teal submit button">Login</div> -->
        <%= f.button "Login", class: "ui teal submit fluid button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big blue button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
